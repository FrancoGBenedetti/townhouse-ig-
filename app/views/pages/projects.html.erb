<%= render 'shared/navbar' %>
<div class="container mr-top fixed-bkg" style="background-image:url('/assets/bkgiso.png')">

  <div class="row">
    <div class="col-md-12 text-center home-projects">
      <%= render 'shared/projectstitle' %>
    </div>
  </div>


  <div class="row d-flex justify-content-center p-3 mt-5">

    <% @projects.each do |project| %>
      <div class="card p-2 m-1" style="width: 18rem;">
          <div class="card-img-box" style="background-image:url('<%= project.photos.first.image %>')">
            
          </div>
          <% if project.sold_out %>
            <div class="sold">
              Vendido
            </div>
      
          <% end %>
         <!--<%= image_tag project.photos.first.image, class: 'card-img-top img-fluid imagen' %>-->
          <div class="card-body d-flex flex-column">
            
            <div class="card-logo-box" style="background-image:url('<%= project.logo %>')" >
              <!--<%= image_tag project.logo, class: 'figure-img img-fluid', style: 'width: 8rem;' %>-->
            </div>
            <h5 class="card-title title-h"><%= project.name %></h5>
            
          
            <%= link_to 'See project', project_path(project), data: { turbolinks: false }, class: 'btn btn-info btn-sm mt-auto' %>
          
            
          </div>
      </div>
    <% end %>

    
  </div>

</div>

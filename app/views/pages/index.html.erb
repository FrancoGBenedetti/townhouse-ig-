<%= render 'shared/navbar' %>



<main class="container-fluid " >
  <div class="row d-flex align-items-stretch">
    <div class=" col-md-6 col-lg-6 col-box-1 p-0">

    </div>
    <div class="col-md-6  p-5">
      <h1 class="title">
        TownHouse Investment Group
      </h1>
      <p class="content p-2">
        With average returns of <span>12.5</span>-percent—Townhouse IG helps lay the foundation for a bright
        future for you and your family. Invest with us and break into real estate the simple way: no asterisks and
        no fine print. So, don’t waste another day waiting for the right opportunity to come. It’s here—and its
        name is <span>Townhouse IG.</span>
      </p>
     
        <%= link_to pages_about_path do  %>
          <button class="btn btn-outline-info m-1">More about Townhouse IG<i class="fas fa-chevron-right"></i></button>
        <% end %>
        <%= link_to pages_projects_path do  %>
          <button class="btn btn-outline-info m-1" >Projects</button>
        <% end %>


    </div>
    
  </div>
</main>

<div class="container-fluid pd-100 metal-bkg home-projects fixed-bkg" ')">
  <div class="row ">
    <div class="col-md-12 text-center">

      <%= render 'shared/projectstitle' %>

    </div>
    <div class="col-md-12">
       <div class="row d-flex justify-content-center projects-row " >

          <% @projects.each do |project| %>
            <div class="card p-2 m-1" style="width: 18rem;">
                <div class="card-img-box" style="background-image:url('<%= project.photos.first.image %>')">

                </div>
               <!--<%= image_tag project.photos.first.image, class: 'card-img-top img-fluid imagen' %>-->
                <div class="card-body d-flex flex-column">

                  <div class="card-logo-box" style="background-image:url('<%= project.logo %>')" >
                    <!--<%= image_tag project.logo, class: 'figure-img img-fluid', style: 'width: 8rem;' %>-->
                  </div>
                  <h5 class="card-title title-h "><%= project.name %></h5>


                  <%= link_to 'See projects', project_path(project), data: { turbolinks: false }, class: 'btn btn-info btn-sm mt-auto' %>


                </div>
            </div>
          <% end %>

        </div>
    </div>



  </div>


   

    <div class="row">

      <div class="offset-md-4 col-md-4 mt-2">
        <%= link_to 'ALL PROJECTS', pages_projects_path, class: 'title btn btn-outline-info mt-auto d-block all-p-btn' %>
      </div>
    </div>





</div>


</main>

<div class="container-fluid pd-100 metal-bkg ">
  <div class="row ">
    <div class="col-md-12 text-left">

      <h3 class="title-h ">Projects</h3>

    </div>

    <div class="col-md-2 gap parent-link " >
      <div class="p-2 link-to-projects d-flex align-items-stretch ">
        <a href="" class="d-flex  align-items-end">
          <h3 class="">Go to Projects</h3>
        </a>
      </div>


    </div>


    <% @projects.each do |project| %>
      <div class="col-md-5 gap" >
        <a href="<%= project_path(project) %>">
          <figure class="home-projects">
            <%= image_tag project.photos.first.image, class: 'img-fluid' %>
            <figcaption class="figure-caption text-right ">
           <%= project.name %>
            <%= image_tag project.logo, class: 'figure-img img-fluid', style: 'width: 10rem;' %>
          </figcaption>
          </figure>
        </a>
      </div>
    <% end %>

  </div>
</div>


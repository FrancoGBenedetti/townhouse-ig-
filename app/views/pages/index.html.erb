<div class="container-fluid img-container">
  <div class="row">
    <div class="d-flex align-items-center justify-content-end text-right w-100 h-100">
      <div class="caption">
          <%= image_tag 'Logowhite-01.png', class: 'logo' %>
          <h5 class="p-4" style="">Build Tomorrow Today</h5>

          <%= link_to pages_projects_path do  %>

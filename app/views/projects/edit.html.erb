<div class="container-fluid p-5 skin">
  <div class="row">
    <h1>Editing Project</h1>

<%= render 'form', project: @project %>


</p>
<p>images of the project</p>
<h3> LOGO</h3>
<% if @project.logo.present? %>
  <%= image_tag @project.logo %>
<% end %>



<div class="row">
  <div class="col-md-12">
    <%= link_to 'Sold Out/ Not Sold Out', make_sold_out_project_path(@project), method: :post,class: 'btn btn-success' %>
    <% if @project.sold_out %>
      <h4>the project is sold out</h4> <br>
    <% else %>
      <h4>the project is not sold out</h4> <br>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_with(model: [@project, Photo.new], local: true) do |f| %>
        <%= f.file_field :image %>
        <%= f.submit :'add image' %>
      <% end %>
    </div>
  </div>
</div>




<div class="container">
  <div class="row">
    <% @project.photos.each do |photo| %>
      <div class="col-md-3">
        <%= image_tag photo.image, class: 'img-thumbnail', width: '250px' %>
        <%= link_to 'x', project_photo_path(@project,photo), method: :delete, class: 'btn btn-danger btn-sm' %>
      </div>
    <% end %>
  </div>
</div>



 ///project mixin////
@mixin bkg-img-mixin($w-size, $h-size, $b-size){
    position: relative;

    width:  $w-size;
    height: $h-size;
    background-position: 50% 50%;
    background-repeat:   no-repeat;
    background-size:     $b-size;
    padding: 1%;
    margin: 0 auto;
}

@mixin bkg-img{


    background-attachment: fixed;
    background-position: left top;
    background-repeat:   no-repeat;
    background-size:     cover;
    
}



////project mixin end///

